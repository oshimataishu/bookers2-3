<div class="container px-sm px-sm-0">
  <div class="row">

    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1 class="mt-3">Editing Book</h1>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>

        <div class="form-group">
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction %>
        </div>

        <div class="form-group">
          <%= f.label :profile_image %><br>
          <%= f.file_field :profile_image, accept: 'image/*' %>
        </div>


        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-success btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

