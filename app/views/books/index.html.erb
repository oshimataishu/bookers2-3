<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: current_user, new_book: @new_book %>
    </div>

    <div class="col-md-8 col-md-offset-1">
      <h2 class="mt-3">Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= book.user.get_profile_image(100, 100) %>
              <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>