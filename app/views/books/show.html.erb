<div class="container px-sm px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/info', user: @book.user, new_book: @new_book %>
    </div>

    <div class="col-md-8 col-md-offset-1">
      <h2 class="mt-3">Book details</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100, 100) %>
              <%= link_to @book.user.name, user_path(@book.user.id) %>
            </td>
            <td>
              <%= @book.title %>
            </td>
            <td>
              <%= @book.body %>
            </td>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <div class="mx-auto">
          <%= link_to "Edit", edit_book_path(@book.id) %> |  <%= link_to "Destroy", book_path(@book.id), method: :delete %>
        </div>
      </div>
    </div>

  </div>
</div>